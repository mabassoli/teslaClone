---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla Landing">
	<main>
		<header
			class="py-3 px-10 flex items-center fixed top-0 w-full justify-between z-40 text-white"
		>
			<div class="flex flex-grow basis-0">
				<svg
					class="h-6 w-28"
					viewBox="0 0 342 35"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 6.6-3.8 7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 14.1h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z"
						fill="currentColor"></path></svg
				>
			</div>

			<nav class="flex">
				<ul class="flex text-sm">
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Model S</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Model 3</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Model X</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Model Y</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Solar Roof</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Solar Panels</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium" href="#">Powerwall</a>
					</li>
				</ul>
			</nav>

			<nav class="flex flex-grow justify-end basis-0">
				<ul class="flex">
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Shop</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Account</a
						>
					</li>
					<li>
						<a class="inline-block px-4 py-2 font-medium text-white" href="#"
							>Menu</a
						>
					</li>
				</ul>
			</nav>
		</header>
		<section
			class="bg-black h-screen w-screen text-center relative overflow-hidden"
		>
			<h2>Experience Tesla</h2>
			<p>Schedule a Demo Drive Today</p>

			<a href="#">Demo Drive</a>

			<div class="absolute top-0 bottom-0">
				<video autoplay muted loop src="/video.webm"></video>
			</div>
		</section>
	</main>
</Layout>
